{
  "publisher": "wmx",
  "name": "snippet-manager",
  "displayName": "Snippet Manager",
  "version": "0.0.0",
  "private": true,
  "packageManager": "pnpm@9.3.0",
  "description": "",
  "author": "Menthy Wu <wumengxuan0728@gmail.com>",
  "license": "MIT",
  "categories": [
    "Other"
  ],
  "main": "./dist/index.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "snippet-manager-sidebar-view",
          "title": "Snippets",
          "icon": "assets/icon.svg"
        }
      ]
    },
    "views": {
      "snippet-manager-sidebar-view": [
        {
          "type": "webview",
          "id": "snippet-manager-sidebar",
          "name": "snippet-manager",
          "icon": "assets/icon.svg",
          "contextualTitle": "snippet-manager"
        }
      ]
    },
    "commands": [
      {
        "command": "snippet-manager.showHelloWorld",
        "title": "Hello World (React + Vite): Show"
      }
    ]
  },
  "icon": "res/icon.png",
  "files": [
    "dist"
  ],
  "engines": {
    "vscode": "^1.90.0"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "scripts": {
    "install:all": "pnpm install && cd webview-ui && pnpm --ignore-workspace install",
    "build": "tsup src/index.ts --external vscode && cd webview-ui && pnpm run build",
    "dev": "nr build --watch",
    "lint": "eslint .",
    "vscode:prepublish": "nr build",
    "publish": "vsce publish --no-dependencies",
    "pack": "vsce package --no-dependencies",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "release": "bumpp && nr publish",
    "prepare": "husky install",
    "prettier": "npx prettier --check .",
    "format": "npx prettier --write ."
  },
  "devDependencies": {
    "@antfu/eslint-config": "^2.21.1",
    "@antfu/ni": "^0.21.12",
    "@eslint/js": "^9.6.0",
    "@types/node": "^20.14.2",
    "@types/vscode": "^1.90.0",
    "@vercel/style-guide": "6.0.0",
    "@vscode/vsce": "^2.27.0",
    "bumpp": "^9.4.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-react": "^7.34.3",
    "esno": "^4.7.0",
    "globals": "^15.6.0",
    "pnpm": "^9.3.0",
    "prettier": "3.3.2",
    "rimraf": "^5.0.7",
    "tsup": "^8.1.0",
    "typescript": "^5.4.5",
    "vite": "^5.3.1",
    "vitest": "^1.6.0",
    "husky": "^8.0.0"
  }
}
